<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>

    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:typeface">monospace</item>-->
        <!--<item name="android:fontFamily">monospace</item>-->
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Button.Disable" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/line_color</item>
        <item name="android:textColor">@color/button_text</item>

        <item name="android:padding">0dp</item>
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <!--<item name="android:typeface">monospace</item>-->
        <!--<item name="android:fontFamily">monospace</item>-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogActivityTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
        <!--<item name="android:typeface">monospace</item>-->
        <!--<item name="android:fontFamily">monospace</item>-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentSizeNormal</item>
    </style>

    <style name="inputTextView" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="textView_Normal" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentSizeNormal</item>
        <item name="android:textColor">@color/ColorGray</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="colorButtonNormal">@color/ColorButtonBg</item>
        <item name="android:background">@color/ColorButtonBg</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RatingBar.Indicator" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:progressDrawable">@drawable/star_select</item>
        <!--<item name="fontPath">fonts/gothamroundedbold_21016.ttf</item>-->
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>
</resources>
