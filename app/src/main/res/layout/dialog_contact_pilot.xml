<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/contactDialogCallTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/blue_stoke_background"
        android:gravity="center"
        android:padding="10dp"

        android:text="Call"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/contactDialogMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/blue_stoke_background"
        android:gravity="center"
        android:padding="10dp"
        android:text="Message"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/contactDialogMessageLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/contactDialogMessageTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Message"
                android:inputType="text"
                android:maxLength="100"
                android:singleLine="false"
                android:textSize="20sp"
                android:typeface="monospace" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/contactDialogSendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:theme="@style/AppTheme.Button" />
    </LinearLayout>
</LinearLayout>