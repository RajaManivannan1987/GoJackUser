<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Courier restrictions"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courierRestrictionDialogContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/courier_restriction_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/courierRestrictionDialogCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:theme="@style/AppTheme.Button" />

            <View
                android:layout_width="20dp"
                android:layout_height="5dp" />

            <Button
                android:id="@+id/courierRestrictionDialogIAgreeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="I Agree"
                android:textAllCaps="false"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
</LinearLayout>